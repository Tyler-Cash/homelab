{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeType": "branch",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Australia/Sydney",
  "ignoreTests": true,
  "schedule": [
    "before 7am every weekday"
  ],
  "automergeSchedule": [
    "before 9am every weekday"
  ],
  "prHourlyLimit": 0,
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchPackageNames": [
        "rook-ceph",
        "rook-ceph-cluster"
      ],
      "groupName": "rook"
    },
    {
      "matchPackageNames": [
        "felddy/foundryvtt"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "ghcr.io/tyler-cash/tyler-bot-backend",
        "ghcr.io/tyler-cash/tyler-bot-frontend"
      ],
      "automerge": true
    },
    {
      "matchCurrentVersion": "/^0\\./",
      "automerge": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}
