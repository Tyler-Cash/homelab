{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "automergeType": "branch",
  "extends": [
    "config:recommended"
  ],
  "timezone": "Australia/Sydney",
  "ignoreTests": true,
  "schedule": ["after 4am and before 7am on every weekday"],
  "automergeSchedule": ["after 2am and before 9am on every weekday"],
  "prHourlyLimit": 0,
  "branchConcurrentLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "matchPackageNames": [
        "rook-ceph",
        "rook-ceph-cluster"
      ],
      "groupName": "rook"
    },
    {
      "matchPackageNames": [
        "felddy/foundryvtt"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "ghcr.io/tyler-cash/tyler-bot-backend",
        "ghcr.io/tyler-cash/tyler-bot-frontend"
      ],
      "automerge": true
    },
    {
      "matchCurrentVersion": "/^0\\./",
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true
    }
  ]
}
