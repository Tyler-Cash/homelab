{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "timezone": "Australia/Sydney",
  "ignoreTests": true,
  "packageRules": [
    {
      "matchPackageNames": [
        "rook-ceph",
        "rook-ceph-cluster"
      ],
      "groupName": "rook"
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "excludePackageNames": ["rook-ceph", "rook-ceph-cluster"],
      "matchCurrentVersion": "!/^0/",
      "automergeType": "branch",
      "automerge": true
    },

    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchPackageNames": ["descheduler", "ghcr.io/bjw-s/calibre-web", "ghcr.io/onedr0p/readarr-develop"],
      "matchCurrentVersion": "<=1.0.0",
      "automerge": true
    },
    {
      "extends": ["schedule:monthly"],
      "matchPackageNames": ["metallb", "volsync", "rook-ceph", "rook-ceph-cluster", "argo-cd"]
    }
  ]
}
